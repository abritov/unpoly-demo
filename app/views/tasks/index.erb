<div class="row mb-4">
  <div class="col">
    <h2>Open tasks</h2>
  </div>

  <div class="col-sm-auto">
    <%= link_to 'Clear done', clear_done_tasks_path, method: :delete, class: 'btn btn-secondary', 'up-target': 'card-columns' %>
    <%= link_to 'New task', new_task_path, class: 'btn btn-primary', 'up-layer': 'new', 'up-accept-event': 'task:created', 'up-on-accepted': "up.reload('.card-columns')" %>
  </div>
</div>

<div class="card-columns">
  <% @tasks.each do |task| %>
    <%= render task %>
  <% end %>
</div>
